<!DOCTYPE html>
<html>
  <head>
    <title>Message Board</title>
    <link rel='stylesheet' href='/stylesheets/index.css' />
  </head>
  <body>
    <header class="header">
      <h1>Message Board</h1>
      <button class="newButton">Add a message</button>
    </header>
    <main>
      <% messages.forEach((message) => { %>
        <div class="message">
          <span>
            <h3><%= message.user %></h3><h4><%= message.added %></h4>
          </span>
          <p><%= message.text %></p>
        </div>
      <% }); %>
    </main>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
